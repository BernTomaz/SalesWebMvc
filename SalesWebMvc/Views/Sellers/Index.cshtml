@model IEnumerable<SalesWebMvc.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<div class="page-header clearfix" style="margin-top:10px">
    <h2 class="pull-left" style="margin-top:5px">
        <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
        
        <small class="text-muted"></small>
    </h2>

    <div class="pull-right">
        <a asp-action="Create" class="btn btn-success">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create New
        </a>
    </div>
</div>



@if (Model == null || !Model.Any())
{
    <div class="jumbotron text-center" style="padding:30px">
        <p class="lead">Nenhum vendedor encontrado.</p>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <span class="glyphicon glyphicon-plus"></span> Create your first seller
        </a>
    </div>
}
else
{
    <div class="panel panel-default">
        <div class="panel-heading" style="background:#20c997;color:#fff;border-color:#20c997">
            <strong>Registered Sellers</strong>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Email)</th>
                        <th>@Html.DisplayNameFor(m => m.First().BirthDate)</th>
                        <th class="text-right">@Html.DisplayNameFor(m => m.First().BaseSalary)</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Name</strong>
                            </td>
                            <td>
                                <a href="mailto:@item.Email">@item.Email</a>
                            </td>
                            <td>
                                @item.BirthDate.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-right">
                                @item.BaseSalary.ToString("N2")
                            </td>
                            <td class="text-right">
                                <div class="btn-group btn-group-xs" role="group" aria-label="Actions">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default" title="Details">
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info" title="Edit">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Delete">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts {
    <script>
        // realce de linha ao focar (sutil)
        (function () {
          var rows = document.querySelectorAll("table.table tbody tr");
          [].forEach.call(rows, function (tr) {
            tr.addEventListener("mouseenter", function () { tr.style.backgroundColor = "rgba(32,201,151,0.06)"; });
            tr.addEventListener("mouseleave", function () { tr.style.backgroundColor = ""; });
          });
        })();
    </script>
}

<style>
    /* utilitários rápidos */
    .text-muted {
        color: #8a8a8a;
    }

    .panel .table > thead > tr > th {
        border-bottom: 0;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #138496;
    }

    .panel-heading {
        font-size: 14px;
    }
</style>
